@page "/notfound"

@inject NavigationManager NavigationManager
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage;
@rendermode InteractiveServer

<div class="text-center mt-5">
    <h2 class="text-danger">Access Denied</h2>
    <p class="mt-3">The Entity Does not exist in the Database</p>
    <p>Please log in to continue.</p>

    <button class="btn btn-primary mt-3" @onclick="GoToLogin">Go back</button>
</div>

@code {
    int hello = -1;
    // private void GoToLogin()
    // {

    //     Navigation.NavigateTo("/");
    // }
    private async Task GoToLogin()
    {
        hello = await LocalStorage.GetItemAsync<int>("Value");
        if (hello == 0)
        {
            NavigationManager.NavigateTo("/developer");
        }
        else if (hello == 1)
        {
            NavigationManager.NavigateTo("/admin");
        }
        else if (hello == 2)
        {
            NavigationManager.NavigateTo("/qa");
        }

    }
}
